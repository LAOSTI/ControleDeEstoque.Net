@model ControleDeEstoqueWeb.Models.ClienteModel
<form asp-action="DeletarCliente">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3 ">
        <h1 class="text-primary">Deletar Cliente</h1>
        <hr />
        <div class="row ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-contdisabled rol" />
            </div>
            <div class="col-2">
                <label asp-for="CpfCnpj" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CpfCnpj" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Rg" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rg" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Numero" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Numero" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Bairro" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Bairro" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Cidade" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Cidade" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Estado" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Estado" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Pais" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Pais" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Telefone" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Telefone" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Voltar para Lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
