@model ControleDeEstoqueWeb.Models.VendasModel
<form asp-action="DeletarVenda">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3 ">
        <h1 class="text-primary">Deletar Venda</h1>
        <hr />
        <div class="row ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="data_venda" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="data_venda" disabled class="form-contdisabled rol" />
            </div>
            <div class="col-2">
                <label asp-for="valor" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="valor" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="produto" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="produto" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="quantidade" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="quantidade" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Voltar para Lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
