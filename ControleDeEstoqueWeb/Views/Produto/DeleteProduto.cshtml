@model ControleDeEstoqueWeb.Models.ProductModel 
<form asp-action="DeleteProduto">
    <input asp-for="Id" hidden />
    <br/>
    <div class="container border p-3 ">
        <h1 class="text-primary">Atualizar Produto</h1>
        <hr/>
        <div class="row ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-2">
                    <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Price" class="control-label pt-2" style="font-size=20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Price" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="amount" class="control-label pt-2" style="font-size=20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="amount" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Classification" class="control-label pt-2" style="font-size=20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Classification" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Mark" class="control-label pt-2" style="font-size=20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Mark" disabled class="form-control" />
                </div>
                <div class="col-5 offset-2">
                    <a asp-action="ProdutoIndex" class="btn-primary btn form-control">Voltar para Lista</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-success form-control" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
