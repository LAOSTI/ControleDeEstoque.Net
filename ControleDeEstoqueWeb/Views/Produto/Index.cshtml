@model IEnumerable<ControleDeEstoqueWeb.Models.ProductModel >
<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2 ">
        <div class="col">
            <h1 class="text-primary">Lista de Produtos</h1>
        </div>
        <div class="col text-end pt-1 ">
            <a asp-action="CriarProduto" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Cadastrar Novo Produto
            </a>
        </div>
    </div>
    <table class="table ">
        <thead>
            <tr>
                <td>
                    Nome
                </td>
                <td>
                    Preço
                </td>
                <td>
                    Quantidade
                </td>
                <td>
                    Classificação
                </td>
                <td>
                    Marca
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name 
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        @((item.Amount).ToString("d"))
                    </td>
                    <td>
                        @item.Classification
                    </td>
                    <td>
                        @item.Mark
                    </td>
                    <td>
                        <a asp-action="AtualizarProduto" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="DeleteProduto" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>